@model ShacabWf.Web.Models.SupportDocument

@{
    ViewData["Title"] = "Delete Document";
}

<div class="container-fluid">
    <h1 class="mt-4">Delete Document</h1>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-trash me-1"></i>
            Confirm Deletion
        </div>
        <div class="card-body">
            <h3 class="text-danger">Are you sure you want to delete this document?</h3>
            <div class="mt-4">
                <dl class="row">
                    <dt class="col-sm-3">File Name</dt>
                    <dd class="col-sm-9">@Model.FileName</dd>
                    
                    <dt class="col-sm-3">Description</dt>
                    <dd class="col-sm-9">@Model.Description</dd>
                    
                    <dt class="col-sm-3">Size</dt>
                    <dd class="col-sm-9">@(Model.FileSize < 1024 * 1024 ? $"{Model.FileSize / 1024} KB" : $"{Model.FileSize / (1024 * 1024):F2} MB")</dd>
                    
                    <dt class="col-sm-3">Uploaded By</dt>
                    <dd class="col-sm-9">@Model.UploadedBy.FullName</dd>
                    
                    <dt class="col-sm-3">Upload Date</dt>
                    <dd class="col-sm-9">@Model.UploadedAt.ToString("MMM dd, yyyy HH:mm")</dd>
                </dl>
                
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div> 