@model ShacabWf.Web.Controllers.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h1 class="h4 mb-0">Error</h1>
                </div>
                <div class="card-body">
                    <h2 class="text-danger">An error occurred while processing your request.</h2>

                    @if (!string.IsNullOrEmpty(Model.Message))
                    {
                        <div class="alert alert-danger mt-3">
                            <p><strong>Error details:</strong> @Model.Message</p>
                        </div>
                    }

                    @if (Model.ShowRequestId)
                    {
                        <p class="mt-3">
                            <strong>Request ID:</strong> <code>@Model.RequestId</code>
                        </p>
                    }

                    <div class="mt-4">
                        <a href="@Url.Action("Simple", "Home")" class="btn btn-primary">
                            <i class="bi bi-house"></i> Return to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 