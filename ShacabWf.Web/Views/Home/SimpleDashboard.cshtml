@{
    ViewData["Title"] = "Simple Dashboard";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2><i class="bi bi-speedometer2 me-2"></i>Simple Dashboard</h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle-fill me-2"></i>
                        Welcome to the Simple Dashboard! This is a streamlined view of the SHACAB.
                    </div>
                    
                    <div class="row mt-4">
                        <div class="col-md-6">
                            <div class="card mb-4">
                                <div class="card-header bg-success text-white">
                                    <h5><i class="bi bi-check-circle-fill me-2"></i>Quick Actions</h5>
                                </div>
                                <div class="card-body">
                                    <div class="list-group">
                                        <a asp-controller="ChangeRequests" asp-action="Create" class="list-group-item list-group-item-action">
                                            <i class="bi bi-plus-circle me-2"></i>Create New Change Request
                                        </a>
                                        <a asp-controller="ChangeRequests" asp-action="MyRequests" class="list-group-item list-group-item-action">
                                            <i class="bi bi-person-lines-fill me-2"></i>View My Requests
                                        </a>
                                        <a asp-controller="ChangeRequests" asp-action="Index" class="list-group-item list-group-item-action">
                                            <i class="bi bi-list-check me-2"></i>View All Change Requests
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header bg-info text-white">
                                    <h5><i class="bi bi-graph-up me-2"></i>System Status</h5>
                                </div>
                                <div class="card-body">
                                    <p>Current system status: <span class="badge bg-success">Operational</span></p>
                                    <p>Last updated: @DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")</p>
                                    <div class="progress mt-3">
                                        <div class="progress-bar bg-success" role="progressbar" style="width: 95%;" aria-valuenow="95" aria-valuemin="0" aria-valuemax="100">95% Uptime</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 